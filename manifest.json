{
  "manifest_version": 3,
  "name": "Page Dark Opposite Theme",
  "version": "1.0.0",
  "description": "Transforms light-themed web pages into dark mode by intelligently adjusting colors",
  "action": {
    "default_title": "Darken this page"
  },
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

